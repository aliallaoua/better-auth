{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  // "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "extends": ["ultracite"],
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/src/**/*",
      "**/.vscode/**/*",
      "**/index.html",
      "**/vite.config.js",
      "!**/src/routeTree.gen.ts",
      "!**/src/components/ui",
      "!**/src/hooks/use-mobile.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": { "organizeImports": "on", "useSortedAttributes": "off" }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noRedundantAlt": "off",
        "noSvgWithoutTitle": "off",
        "useValidAnchor": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "correctness": {
        "noChildrenProp": "off",
        // "no-unused-vars": "off"
        "noUnusedVariables": "off",
        // "react-compiler/react-compiler": "error"
        "noReactPropAssignments": "error",
        // "react-hooks/rules-of-hooks": "error"
        "useHookAtTopLevel": "error",
        // "react-hooks/exhaustive-deps": "warn"
        "useExhaustiveDependencies": "warn"
      },
      "performance": {
        "noImgElement": "off",
        "noNamespaceImport": "off",
        "useTopLevelRegex": "off"
      },
      "nursery": {
        "noShadow": "off",
        "useConsistentArrowReturn": "off",
        "useConsistentTypeDefinitions": "off",
        "useImageSize": "off",
        "useSortedClasses": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "noHeadElement": "off",
        "noMagicNumbers": "off",
        "noNestedTernary": "off",
        "noNonNullAssertion": "off",
        "useBlockStatements": "off",
        // eslint-plugin-react-refresh: react-refresh/only-export-components
        "useComponentExportOnlyModules": "error",
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        // "@typescript-eslint/no-explicit-any": "warn"
        "noExplicitAny": "warn",
        "noEmptyBlockStatements": "off",
        "noConsole": "off",
        "useAwait": "off",
        "useStaticResponseMethods": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
